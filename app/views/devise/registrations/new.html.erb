<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center mb-4">Регистрация</h2>

      <%= form_for(resource, as: resource_name, 
                   url: registration_url(resource_name), 
                   html: { class: 'needs-validation' }) do |f| %>
        
        <% if resource.errors.any? %>
          <div class="alert alert-danger">
            <% resource.errors.full_messages.each do |msg| %>
              <div><%= msg %></div>
            <% end %>
          </div>
        <% end %>
        
        <div class="mb-3">
          <%= f.label :name, "Имя", class: 'form-label' %>
          <%= f.text_field :name, autofocus: true, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.label :email, "Email", class: 'form-label' %>
          <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.label :password, "Пароль", class: 'form-label' %>
          <% if @minimum_password_length %>
            <small class="text-muted">(минимум <%= @minimum_password_length %> символов)</small>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="mb-4">
          <%= f.label :password_confirmation, "Подтверждение пароля", class: 'form-label' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.submit "Зарегистрироваться", class: 'btn btn-primary w-100' %>
        </div>
      <% end %>

      <div class="text-center mt-3">
        <p>Уже есть аккаунт? 

          <%= link_to "Войти", new_user_session_url %>
        </p>
      </div>
    </div>
  </div>
</div>